<main class="pure-g" id>

    <div class="pure-u-1-3">
        <h1>Add sensor</h1>
        <form class="pure-form pure-form-aligned" id="add-new">
            <fieldset>
                <div class="pure-control-group">
                    <label for="name">Sensor name</label>
                    <input id="name" type="text" placeholder="Sensor name">
                </div>

                <div class="pure-control-group">
                    <label for="type">Widget type</label>
                    <select id="type">
                        <option value="small">Small number box</option>
                        <option value="normal">Small graph</option>
                        <option value="big">Big graph</option>
                    </select>
                </div>

                <div class="pure-control-group">
                    <label for="token">Token</label>
                    <input type="text" id="token">
                </div>

                <div class="pure-controls">
                    <button type="submit" class="pure-button pure-button-primary">Submit</button>
                </div>
            </fieldset>
        </form>
    </div>

</main>
